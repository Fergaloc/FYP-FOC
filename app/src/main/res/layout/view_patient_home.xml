<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4F6">


    <View
        android:id="@+id/view"
        android:layout_width="1037dp"
        android:layout_height="479dp"
        android:layout_marginBottom="239dp"
        android:background="@drawable/ic_waving"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></View>

    <Button
        android:id="@+id/btnViewHealth"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/homebutton"
        android:text="View Patients Health"
        android:textAllCaps="false"
        android:textColor="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewRecent"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/homebutton"
        android:text="View Recent Bleeds"
        android:textAllCaps="false"
        android:textColor="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewHealth" />


    <TextView
        android:id="@+id/txtHomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="NAME"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPatientHome"
        android:layout_width="117dp"
        android:layout_height="116dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="12dp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <TextView
        android:id="@+id/txtHomeSeverity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:text="Severity"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/txtDOBhome"
        app:layout_constraintTop_toBottomOf="@+id/txtRegionHome" />

    <TextView
        android:id="@+id/txtRegionHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Region"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeName" />

    <TextView
        android:id="@+id/txtDOBhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="12dp"
        android:text="DOB"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegionHome" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:text="Patient Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDocBack"
        android:layout_width="44dp"
        android:layout_height="27dp"
        android:layout_marginStart="13dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_returnwhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView46" />


</androidx.constraintlayout.widget.ConstraintLayout>