<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


            <TextView
                android:id="@+id/TextViewNameList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextViewSeverity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextViewNameList"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextViewRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextViewSeverity"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextViewDOB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextViewRegion"
                android:layout_margin="10dp"
                android:textSize="16sp" />



</LinearLayout>
